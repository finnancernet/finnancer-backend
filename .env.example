# Application
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/plaid-financcer

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
# Options: sandbox, development, production

# Plaid API Version
PLAID_API_VERSION=2020-09-14

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
# Set to 'true' for port 465, 'false' for other ports
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=Plaid Financcer <noreply@example.com>

# Email Features
EMAIL_DAILY_SUMMARY_ENABLED=true

# Authentication (JWT)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=7d
# Options: 15m, 1h, 24h, 7d, 30d

# Security - Rate Limiting
THROTTLE_SHORT_LIMIT=10
# Max requests per second per IP
THROTTLE_MEDIUM_LIMIT=20
# Max requests per 10 seconds per IP
THROTTLE_LONG_LIMIT=100
# Max requests per minute per IP

# Security - CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
# Comma-separated list of allowed origins

# Security - Proxy Trust
TRUST_PROXY=false
# Set to 'true' if behind a reverse proxy (nginx, AWS ALB, etc.)
